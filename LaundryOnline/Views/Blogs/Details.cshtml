@model LaundryOnline.Models.Blog

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <!-- breadcrumb area start -->
    <div class="tp-page-title-area pt-180 pb-185 position-relative fix" data-background="/assets/img/slider/breadcrumb-bg-1.jpg">
        <div class="tp-custom-container">
            <div class="row">
                <div class="col-12">
                    <div class="tp-page-title z-index">
                        <h2 class="breadcrumb-title">Blog <span>Details</span></h2>
                        <div class="breadcrumb-menu">
                            <nav class="breadcrumb-trail breadcrumbs">
                                <ul class="trail-items">
                                    <li class="trail-item trail-begin">
                                        <a asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="trail-item trail-end"><span>Blog Details</span></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- blog details area start here -->
    <section class="blog-details-area pt-120 pb-70">
        <div class="container">
            <div class="tp-custom-container-box">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="blog__details--wrapper mr-50 mb-50">
                            <div class="ablog ablog-4 mb-55">
                                <div class="ablog__img wow fadeInUp">
                                    <img width="720" height="421" alt="" class="img-fluid w-100" src="~/images/blogs/@Html.DisplayFor(model => model.Image)">
                                </div>
                                <div class="ablog__text ablog__text4">
                                    <div class="ablog__meta ablog__meta4">
                                        <ul>
                                            <li><a href="blog-details.html"><i class="far fa-calendar-check"></i>@Model.CreatedAt.ToShortDateString()</a></li>
                                            <li><a href="blog-details.html"><i class="far fa-user"></i> @Model.User.UserName </a></li>
                                        </ul>
                                    </div>
                                    <h3 class="ablog__text--title4 mb-20"><a href="blog-details.html">@Html.DisplayFor(model => model.Title)</a></h3>
                                    <p class="mb-30">@Html.Raw(@Model.Content)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="ablog__sidebar">
                            <div class="widget wow fadeInUp" data-wow-delay=".3s">
                                <div class="sidebar--widget__search mb-45">
                                    <form action="#">
                                        <input type="text" placeholder="Search">
                                        <button type="submit"><i class="far fa-search"></i></button>
                                    </form>
                                </div>
                            </div>
                            <div class="widget mb-45 wow fadeInUp" data-wow-delay=".5s">
                                <h3 class="sidebar__widget--title mb-30">Recent News </h3>
                                @foreach (var item in ViewBag.blogNews)
                                {
                                    <div class="sidebar--widget__post mb-20">
                                        <div class="sidebar__post--thumb">
                                            <a asp-action="Details" asp-area="Home" asp-route-id="@item.BlogId">
                                                <img class="post__img" src="~/images/blogs/@item.Image" alt=" @item.Title"></img>
                                            </a>
                                        </div>
                                        <div class="sidebar__post--text">
                                            <h4 class="sidebar__post--title"><a asp-action="Details" asp-area="Home" asp-route-id="@item.BlogId">@item.Title</a></h4>
                                            <span>@item.CreatedAt.ToShortDateString()</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- blog details area end here -->

</main>