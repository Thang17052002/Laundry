@model LaundryOnline.Models.Config

@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="tp-header-top theme-dark-bg pt-20 pb-50 d-none d-xl-block">
    <div class="tp-custom-container">
        <div class="row align-items-center">
            <div class="col-xxl-4 col-xl-5">
                <div class="tp-header-top-info">
                    <div class="tp-header-top-info-single pr-40 mr-40 border-right-1">
                        <div class="tp-header-top-info-single-icon mr-10">
                            <i class="flaticon-pin"></i>
                        </div>
                        <div class="tp-header-top-info-single-text">
                            <span class="tp-header-top-info-single-label">Free Contact</span>
                            <span class="tp-header-top-info-single-content font-medium">
                                @Model.Address
                            </span>
                        </div>
                    </div>
                    <div class="tp-header-top-info-single">
                        <div class="tp-header-top-info-single-icon mr-15">
                            <i class="flaticon-email"></i>
                        </div>
                        <div class="tp-header-top-info-single-text">
                            <span class="tp-header-top-info-single-label">Email us</span>
                            <a href="" class="tp-header-top-info-single-content font-medium"><span class="__cf_email__">[@Model.EmailAddress]</span></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xxl-4 col-xl-2">
                <div class="header-logo text-center">
                    <a href="index.html"><img src="~/assets/img/logo/logo-white.png" class="img-fluid" alt=""></a>
                </div>
            </div>
            <div class="col-xxl-4 col-xl-5">
                <div class="tp-header-top-info justify-content-end">
                    <div class="tp-header-top-info-single mr-85">
                        <div class="tp-header-top-info-single-icon tp-header-top-info-single-icon-call mr-10">
                            <i class="flaticon-phone-call"></i>
                        </div>
                        <div class="tp-header-top-info-single-text">
                            <span class="tp-header-top-info-single-label">Free Call</span>
                            <a href="tel:33388820055" class="tp-header-top-info-single-content font-medium">@Model.ContactNumber</a>
                        </div>
                    </div>
                    <div class="tp-header-top-info-single">
                        <div class="tp-header-top-info-single-btn">
                            @if (HttpContextAccessor.HttpContext.Session.GetString("CustomerLogin") != null)
                            {
                                <a asp-controller="Accounts" asp-action="Logout" class="yellow-btn"><i class="flaticon-enter"></i> Logout</a>
                            }
                            else
                            {
                                <a asp-controller="Accounts" asp-action="Login" class="yellow-btn"><i class="flaticon-enter"></i> Login</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="tp-header-menu-area tp-transparent-header-menu header-sticky">
    <div class="container">
        <div class="row justify-content-xl-center align-items-center">
            <div class="col-xl-2 col-8 tp-sticky-column">
                <div class="tp-sticky-logo">
                    <a href="index.html"><img src="~/images/config/@Model.Image" class="img-fluid" alt="logo not found"></a>
                </div>
            </div>
            <div class="col-xl-8 col-4">
                <div class="tp-main-menu-bg">
                    <div class="tp-main-menu">
                        <nav id="tp-mobile-menu">
                            <ul class="text-center">
                                <li class="">
                                    <a asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="">
                                    <a asp-controller="About" asp-action="Index">About</a>
                                </li>
                                <li class="menu-item-has-children">
                                    <a asp-controller="Services" asp-action="Index">Services</a>
                                    @await Component.InvokeAsync("Services")
                                </li>
                                <li class="">
                                    <a asp-controller="Blogs" asp-action="Index">Blogs</a>
                                </li>
                                <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                                @if (HttpContextAccessor.HttpContext.Session.GetString("CustomerLogin") != null)
                                {
                                    <li class="menu-item-has-children">
                                        <a href="#">@HttpContextAccessor.HttpContext.Session.GetString("CustomerLogin")</a>
                                        <ul class="sub-menu">
                                            <li><a href="about.html">My Account</a></li>
                                            <li><a href="appointment.html">My Order</a></li>
                                            <li><a asp-controller="Accounts" asp-action="Logout">Logout</a></li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li class="menu-item-has-children">
                                        <a asp-controller="Accounts" asp-action="Login">Login</a>
                                        <ul class="sub-menu">
                                            <li><a asp-controller="Accounts" asp-action="Login"> Login</a></li>
                                            <li><a asp-controller="Accounts" asp-action="Register">Register</a></li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                    <!-- mobile menu activation -->
                    <div class="side-menu-icon d-xl-none text-end">
                        <button class="side-toggle"><i class="far fa-bars"></i></button>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 tp-sticky-column-btn">
                <div class="tp-sticky-btn text-end">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("CustomerLogin") != null)
                    {
                        <a asp-controller="Accounts" asp-action="Logout" class="theme-btn justify-content-end">
                            <i class="flaticon-enter"></i> Logout
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Accounts" asp-action="Login" class="theme-btn justify-content-end">
                            <i class="flaticon-enter"></i> Login
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="fix">
    <div class="side-info">
        <button class="side-info-close"><i class="fal fa-times"></i></button>
        <div class="side-info-content">
            <div class="tp-mobile-menu"></div>
            <div class="contact-infos mb-30">
                <div class="contact-list mb-30">
                    <h4>Contact Info</h4>
                    <ul>
                        <li><i class="flaticon-pin"></i>@Model.Address</li>
                        <li><i class="flaticon-email"></i><a href=""><span class="__cf_email__" >[@Model.EmailAddress]</span></a></li>
                        <li><i class="flaticon-phone-call"></i><a href="tel:33388820055">@Model.ContactNumber</a></li>
                    </ul>
                    <div class="sidebar__menu--social">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-google"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>