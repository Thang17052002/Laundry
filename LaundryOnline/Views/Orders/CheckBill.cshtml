
@{
    ViewData["Title"] = "CheckBill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="tp-page-title-area pt-180 pb-185 position-relative fix" data-background="/assets/img/slider/breadcrumb-bg-1.jpg">
        <div class="tp-custom-container">
            <div class="row">
                <div class="col-12">
                    <div class="tp-page-title z-index">
                        <h2 class="breadcrumb-title">Your <span>Order</span></h2>
                        <div class="breadcrumb-menu">
                            <nav class="breadcrumb-trail breadcrumbs">
                                <ul class="trail-items">
                                    <li class="trail-item trail-begin">
                                        <a asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="trail-item trail-end"><span>Order</span></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="tp-pricing-area pt-120 pb-90">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="section-title-wrapper text-center mb-55 wow fadeInUp" data-wow-delay=".2s">
                        <h5 class="tp-section-subtitle common-yellow-shape mb-20 heading-color-black">Our Affordable Package</h5>
                        <h2 class="tp-section-title heading-color-black">Check Bill</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="tp-contact-form card">
                        <form asp-action="Details" asp-controller="Orders" method="get">
                            <div class="row custom-mar-20 card-body" style="padding: 50px;">
                                <div class="col-md-12 custom-pad-20">
                                    <div class="tp-contact-form-field mb-20">
                                        <input placeholder="Enter your waybill code" name="id"/>
                                    </div>
                                </div>
                                <div class="col-md-12 custom-pad-20">
                                    <div class="tp-contact-form-field mb-20">
                                        <p class="text-muted " style="padding-left: 40px;">
                                            Enter your bill of lading code to look up
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-12 custom-pad-20">
                                    <div class="tp-contact-form-field">
                                        <button type="submit" class="theme-btn text-capitalize" style="width: -webkit-fill-available;">
                                            Check bill of lading
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>